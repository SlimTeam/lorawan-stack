.container
  margin-top: $ls.s

.icon
  height: 58px
  width: 50px

.title-section-container
  display: flex
  flex-wrap: nowrap

.title-section
  display: inline-flex
  flex-direction: column
  justify-content: center
  align-items: flex-start
  padding-left: $cs.m

.title
  text-margin-top($ls.m)
  text-margin-bottom($cs.m)
  color: $tc-black
  margin: 0
  font-size: $fs.xl

.id
  color: $c-icon-fill

  &-prefix
    font-weight: bold

    &:after
      content: ':'
      padding-right: $cs.xxs

.h-rule
  full-width()
  margin-top: 0
  margin-bottom: $ls.m

  +media-query($bp.s)
    margin-bottom: $ls.s
